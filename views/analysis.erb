    header, main, body, html {
      margin: 0;
      padding: 0;
    }
    body {
      font: 14px Avenir,'Helvetica Neue',Helvetica,Arial,sans-serif;
      /*color:#7F8E98; */
      color: #5E646E;
    }
    .circle {
      display: block;
      width: 150px;
      height: 150px;
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
      -webkit-border-radius: 99em;
      -moz-border-radius: 99em;
      border-radius: 99em;
      border: 5px solid #eee;
      box-shadow: 0 3px 2px rgba(0, 0, 0, 0.3);  
      float:left;
    }
    h1,h2,h3 {
      margin: 0;
      color: #475C80;
      font-weight: 200;
    }
    header {
      padding: 20px;
      border-bottom:1px solid #E0E0E0;
    }
    header h1 {
      display: inline;
    }
    header p {
      display: inline;
      float: right;
    }
    main a, a:hover, a:visited {
      text-decoration: none;
      color: #5E646E;
    }
    .info {
      float: right;
      height: 200px;
    }
    section:nth-child(even) {
      background-color: #F0F0F0;
    }
    section{
      min-height: 240px;
      padding: 20px;
      border-bottom: 1px solid #DBDBDB;
    }
    .clear {
      clear: both;
    }
    .title {
      text-align: center;
      padding: 10px;
    }
    .dial-wrap {
      margin-right: 30px;
      display: inline-block;
    }
    .caption {
      text-align: center;
    }
    .wrapper {
      margin: 0 auto;
      text-align: center;
    }
    @media all and (max-width: 700px) {
      .circle {
        float: none;
        text-align: center;
        margin: 0 auto;
        margin-bottom:20px;
      }
      .image {
        text-align: center;
      }
      .info {
        float: none;
        text-align: center;
      }
      header p {
        display: block;
        text-align: center;
        float: none;
      }
    }
  </style>
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js" ></script>
  <script src="jquery.knob.js"></script>
  <script>
      $(function() {
